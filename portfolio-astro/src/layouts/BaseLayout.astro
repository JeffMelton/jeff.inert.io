---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Jeff Melton - DevOps & Platform Engineering Consultant" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <title>{title}</title>
</head>
<body>
    <header class="bg-white shadow-md sticky top-0 z-50">
        <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-4">
                <div class="text-xl font-semibold text-slate-700">Jeff Melton</div>
                <ul class="flex list-none gap-4 sm:gap-8 flex-col sm:flex-row sm:items-center">
                    <li><a href="/" class="text-gray-700 hover:text-blue-500 font-medium transition-colors duration-300">Home</a></li>
                    <li><a href="/tools" class="text-gray-700 hover:text-blue-500 font-medium transition-colors duration-300">Tools & Portfolio</a></li>
                    <li><a href="/case-studies" class="text-gray-700 hover:text-blue-500 font-medium transition-colors duration-300">Case Studies</a></li>
                    <li><a href="/about" class="text-gray-700 hover:text-blue-500 font-medium transition-colors duration-300">About</a></li>
                    <li><a href="/contact" class="text-gray-700 hover:text-blue-500 font-medium transition-colors duration-300">Contact</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <main>
        <slot />
    </main>

    <footer class="bg-slate-700 text-white text-center py-8">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <p>&copy; 2025 Jeff Melton. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>